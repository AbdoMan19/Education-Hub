@model MVC_Task.DB.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this Department?</h4>
    <hr />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Degree:</strong> @(Model.Manager ?? "N/A")</p>
</div>

<form asp-action="Delete" asp-controller="Department" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
