@model MVC_Task.DB.Models.CourseResult

@{
    ViewData["Title"] = "Delete CourseResult";
}

<h2>Delete CourseResult</h2>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this courseResult?</h4>
    <hr />
    <p><strong>Degree:</strong> @(Model.Degree.HasValue ? Model.Degree.Value.ToString("F2") : "N/A")</p>
    <p><strong>Trainee:</strong> @(Model.Trainee != null ? Model.Trainee.Name : "N/A")</p>
    <p><strong>Course:</strong> @(Model.Course != null ? Model.Course.Name : "N/A")</p>
</div>

<form asp-action="Delete" asp-controller="CourseResult" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
