@model IEnumerable<MVC_Task.DB.Models.CourseResult>

@{
    ViewData["Title"] = "CourseResults";
}

<h2>CourseResults</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New CourseResult</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Degree</th>
            <th>Trainee</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var courseResult in Model)
        {
            <tr>
                <td>@(courseResult.Degree.HasValue ? courseResult.Degree.Value.ToString("F2") : "N/A")</td>
                <td>@(courseResult.Trainee != null ? courseResult.Trainee.Name : "N/A")</td>
                <td>@(courseResult.Course != null ? courseResult.Course.Name : "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@courseResult.Id" asp-controller="CourseResult" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@courseResult.Id" asp-controller="CourseResult" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@courseResult.Id" asp-controller="CourseResult" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
