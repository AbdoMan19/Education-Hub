@model MVC_Task.DB.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this course?</h4>
    <hr />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Degree:</strong> @(Model.Degree.HasValue ? Model.Degree.Value.ToString("F2") : "N/A")</p>
    <p><strong>Minimum Degree:</strong> @Model.MinDegree</p>
    <p><strong>Department:</strong> @(Model.Department != null ? Model.Department.Name : "N/A")</p>
</div>

<form asp-action="Delete" asp-controller="Course" asp-route-id ="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
