@model MVC_Task.DB.Models.Trainee

@{
    ViewData["Title"] = "Delete Trainee";
}

<h2>Delete Trainee</h2>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this trainee?</h4>
    <hr />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Department:</strong> @(Model.Department != null ? Model.Department.Name : "N/A")</p>
    <p><strong>Image:</strong></p>
    <img src="/images/@(Model.Image ?? "default.jpg")" alt="Trainee Image" style="width: 100px; height: 100px;" />
    <p><strong>Grade:</strong> @(Model.Grade.HasValue ? Model.Grade.Value.ToString("F2") : "N/A")</p>
</div>

<form asp-action="Delete" asp-controller="Trainee" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
