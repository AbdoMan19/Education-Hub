@model MVC_Task.DB.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<h2>Delete Instructor</h2>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this instructor?</h4>
    <hr />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Image:</strong></p>
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <img src="@Model.Image" alt="@Model.Name" width="50" height="50" />
    }
    else
    {
        <span>N/A</span>
    }
    <p><strong>Salary:</strong> @(Model.Salary.HasValue ? Model.Salary.Value.ToString("C") : "N/A")</p>
    <p><strong>Address:</strong> @(string.IsNullOrEmpty(Model.Address) ? "N/A" : Model.Address)</p>
    <p><strong>Department:</strong> @(Model.Department != null ? Model.Department.Name : "N/A")</p>
    <p><strong>Course:</strong> @(Model.Course != null ? Model.Course.Name : "N/A")</p>
</div>

<form asp-action="Delete" asp-controller="Instructor" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
