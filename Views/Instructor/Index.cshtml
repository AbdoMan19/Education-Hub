@model IEnumerable<MVC_Task.DB.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}

<h2>Instructors</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Instructor</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Address</th>
            <th>Department</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>
                   <img src="~/images/@(instructor.Image ?? "default.jpg")" alt="Instructor Image" style="width: 100px; height: 100px;" />
                </td>
                <td>@instructor.Name</td>
                <td>@(instructor.Salary.HasValue ? instructor.Salary.Value.ToString("C") : "N/A")</td>
                <td>@(string.IsNullOrEmpty(instructor.Address) ? "N/A" : instructor.Address)</td>
                <td>@(instructor.Department != null ? instructor.Department.Name : "N/A")</td>
                <td>@(instructor.Course != null ? instructor.Course.Name : "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@instructor.Id" asp-controller="Instructor" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@instructor.Id" asp-controller="Instructor" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@instructor.Id" asp-controller="Instructor" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
